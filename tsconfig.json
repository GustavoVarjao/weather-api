{
  "compilerOptions": {
    "alwaysStrict": true,
    "noImplicitAny": true,
    "rootDirs": [
      "src",
      "tests"
    ],
    "baseUrl": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "module": "commonjs",
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "dist",
    "removeComments": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "target": "es2021",
    "types": [
      "node"
    ],
    "paths": {
      "@/*": [
        "*"
      ],
      "@/tests/*": [
        "tests/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "tests"
  ],
  "include": [
    "src/**/*"
  ]
}